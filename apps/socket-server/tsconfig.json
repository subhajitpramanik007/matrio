{
    "compilerOptions": {
        "target": "ES2020",
        "module": "NodeNext",
        "moduleDetection": "force",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "forceConsistentCasingInFileNames": true,
        "allowImportingTsExtensions": true,
        "allowJs": true,
        "outDir": "./dist",
        "isolatedModules": true
    },
    "include": ["src/**/*", "tests/**/*"]
}
