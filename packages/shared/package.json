{
  "name": "@matrio/shared",
  "version": "1.0.0",
  "description": "The shared library for Matrio.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b -w"
  },
  "keywords": [
    "matrio",
    "shared",
    "library"
  ],
  "dependencies": {
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/node": "^20",
    "typescript": "^5.9.2"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./schemas": {
      "import": "./dist/schemas/index.js",
      "require": "./dist/schemas/index.js"
    },
    "./schemas/*": {
      "import": "./dist/schemas/*.js",
      "require": "./dist/schemas/*.js"
    }
  }
}
